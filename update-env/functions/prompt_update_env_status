#function prompt_update_env_status {
typeset showMe="" icon="" colour="011"

case $_UPDATE_ENV_STATUS in
  1)
    showMe=1
    icon="⚠️"
    ;;
  2)
    showMe=1
    icon="⬇"
    colour="004"
    ;;
  3)
    showMe=1
    icon="⬆"
    colour="004"
    ;;
  4)
    showMe=1
    icon="‼️"
    ;;
esac

p10k segment -f ${colour} -i "${icon}" -c "${showMe}"

#}
