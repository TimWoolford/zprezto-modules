#function updateModules {
    zstyle -a ':prezto:load' pmodule-dirs 'user_pmodule_dirs'
    zstyle -a ':prezto:load' pmodule 'pmodules'

    for pmodule in "$pmodules[@]"; do
      locations=(${user_pmodule_dirs:+${^user_pmodule_dirs}/$pmodule(-/FN)})
      if (( ${#locations} != 1 )); then
        continue
      fi

      local pmodule_location=${locations[-1]}

      if [[ -s "${pmodule_location}/upgrade.zsh" ]]; then
        source "${pmodule_location}/upgrade.zsh"
      fi
    done
#}