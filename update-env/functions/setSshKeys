#function setSshKeys {

    if ( [ -d ${ZDOTDIR}/ssh ] ); then
        echo "Adding SSH keys"
        for identityFile in `ls ${ZDOTDIR}/ssh/*_rsa`
        do
            chmod 600 ${identityFile}
            ssh-add --apple-use-keychain ${identityFile}
        done

        echo "Adding Authorized Keys"

        local -a publicKeyFiles=(${ZDOTDIR}/ssh/*_rsa.pub) 2>/dev/null

        for identityFile in $publicKeyFiles
        do
          echo "Adding ${identityFile}"
          local pubKey=$(cat $identityFile)
          grep -q -F "${pubKey}" ~/.ssh/authorized_keys 2>/dev/null || echo "${pubKey}" >> ~/.ssh/authorized_keys
        done
    fi

#}
